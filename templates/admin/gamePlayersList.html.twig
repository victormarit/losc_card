{% extends '@EasyAdmin/layout.html.twig' %}
{% block content %}
    <link rel="stylesheet" href="{{ asset('css/dragAndDrop.css') }}">
    <div class="jumbotron">
        <h1>Feuille de match : {{ game.category.name }} {{ game.gameDate|date('d/m/Y') }}</h1>

        <h2 class="h4">Joueurs suspendu</h2>
        <div class="text-danger">
            {% for player in playerSuspended %}
            {{ player.firstname }} {{ player.lastname }},
            {% endfor %}
        </div>


        <form class="mt-3" method="post" >
            <h2 class="h4">Joueurs s√©lectionnables</h2>
            <div class="text-primary">
                {% for player in players %}
                <div>
                    <input type="checkbox" id="{{ player.id }}"  name="{{ player.id }}" value="{{ player.id }}" {% if player.id in idPlayers %} checked {% endif %}>
                    <label for="{{ player.id }}">{{ player.firstname }} {{ player.lastname }}</label>
                </div>

                {% endfor %}
            </div>

            <input type="submit" class="btn btn-primary mt-2" value="Valider">
        </form>




    </div>

{% endblock %}